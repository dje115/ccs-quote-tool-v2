# CCS Quote Tool v2 - Environment Variables Example
# Copy this file to .env and update with your values

# Application
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-super-secret-key-here-change-in-production

# Database
DATABASE_URL=postgresql://postgres:postgres_password_2025@localhost:5432/ccs_quote_tool

# Redis
REDIS_URL=redis://localhost:6379/0

# Multi-tenant
DEFAULT_TENANT=ccs
SUPER_ADMIN_EMAIL=admin@ccs.com
SUPER_ADMIN_PASSWORD=admin123

# API Keys (System-wide defaults)
OPENAI_API_KEY=your-openai-api-key-here
COMPANIES_HOUSE_API_KEY=your-companies-house-api-key-here
GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here

# Email Configuration (MailHog for development)
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_TLS=false
SMTP_FROM_EMAIL=noreply@ccs.com
SMTP_FROM_NAME=CCS Quote Tool

# MinIO Configuration (Object Storage)
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET=ccs-quote-tool
MINIO_SECURE=false
MINIO_REGION=







